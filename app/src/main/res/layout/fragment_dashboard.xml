<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/black_hearts_crop"
    tools:context=".ui.dashboard.DashboardFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_first_service"
        android:layout_width="112dp"
        android:layout_height="200dp"
        android:layout_marginTop="48dp"
        android:layout_marginStart="36dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/lingerie_1"
        app:shapeAppearanceOverlay="@style/RoundedSquare"
        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@id/iv_first_service"
        app:layout_constraintTop_toBottomOf="@id/iv_first_service"
        app:layout_constraintEnd_toEndOf="@id/iv_first_service"
        android:textSize="16dp"
        android:backgroundTint="#450215"
        android:text="10,000$"
        />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_second_service"
        android:layout_width="112dp"
        android:layout_height="200dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/lingerie_2"
        app:shapeAppearanceOverlay="@style/RoundedSquare"
        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@id/iv_second_service"
        app:layout_constraintTop_toBottomOf="@id/iv_second_service"
        app:layout_constraintEnd_toEndOf="@id/iv_second_service"
        android:textSize="16dp"
        android:backgroundTint="#450215"
        android:text="12,000$"
        />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_third_service"
        android:layout_width="112dp"
        android:layout_height="200dp"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="124dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/lingerie_3"
        app:shapeAppearanceOverlay="@style/RoundedSquare"
        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@id/iv_third_service"
        app:layout_constraintTop_toBottomOf="@id/iv_third_service"
        app:layout_constraintEnd_toEndOf="@id/iv_third_service"
        android:textSize="16dp"
        android:backgroundTint="#450215"
        android:text="20,000$"
        />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_fourth_service"
        android:layout_width="112dp"
        android:layout_height="200dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="124dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/lingerie_4"
        app:shapeAppearanceOverlay="@style/RoundedSquare"
        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@id/iv_fourth_service"
        app:layout_constraintTop_toBottomOf="@id/iv_fourth_service"
        app:layout_constraintEnd_toEndOf="@id/iv_fourth_service"
        android:textSize="16dp"
        android:backgroundTint="#450215"
        android:text="12,000$"
        />

</androidx.constraintlayout.widget.ConstraintLayout>