<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


            <TextView
                android:id="@+id/tv_message_text_default_in"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minWidth="60dp"
                android:padding="4dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="100dp"
                android:textSize="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.7"
                android:background="@drawable/shape_bg_default_in"
                tools:text="Ho... tyuu hurrah kdl ldorg ldltt dtltidg drrr ee"
                />

            <TextView
                android:id="@+id/tv_message_time_default_in"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minWidth="100dp"
                android:padding="2dp"
                android:layout_marginBottom="4dp"
                android:textSize="13dp"
                app:layout_constraintStart_toEndOf="@id/tv_message_text_default_in"
                app:layout_constraintBottom_toBottomOf="@id/tv_message_text_default_in"
                tools:text="24:07"/>




</androidx.constraintlayout.widget.ConstraintLayout>