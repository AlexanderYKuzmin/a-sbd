<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_message_text_start_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="60dp"
        android:maxWidth="270dp"
        android:padding="4dp"
        android:paddingStart="22dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.7"
        android:background="@drawable/shape_bg_incoming_bubble"
        tools:text="Hoiru rotot  pwpwoiwe....... ow dkjgksl'gsg"
        />

    <TextView
        android:id="@+id/tv_message_time_start_in"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minWidth="100dp"
        android:padding="2dp"
        android:layout_marginBottom="4dp"
        android:textSize="13dp"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@id/tv_message_text_start_in"
        app:layout_constraintBottom_toBottomOf="@id/tv_message_text_start_in"
        app:layout_constraintTop_toTopOf="@id/tv_message_text_start_in"
        tools:text="22:07"/>

</androidx.constraintlayout.widget.ConstraintLayout>